<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee918d">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/drawer_toolbar"/>

    <TextView
        android:id="@+id/centerText2"
        android:text="LIPS ESSENTIALS"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#264653"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/centerText2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30sp"
        android:text="* Lipstick"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/centerText2"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30sp"
        android:text="* Lip Balm"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/centerText2"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30sp"
        android:text="* Lip Liner"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/centerText2"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30sp"
        android:text="* Lip Gloss"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/lipro"
        android:layout_marginTop="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>