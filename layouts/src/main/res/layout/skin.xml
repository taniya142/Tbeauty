<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee918d">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/drawer_toolbar"/>

    <TextView
        android:layout_below="@+id/centerText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30sp"
        android:text="* Moisturizer"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/centerText"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30sp"
        android:text="* Sunscreen"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/centerText"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30sp"
        android:text="* Cleanser"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/centerText"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30sp"
        android:text="* Toner"
        android:textSize="30sp"
        android:textColor="#264653"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/centerText"
        android:layout_centerHorizontal="true"
        android:text="SKIN ESSENTIALS"
        android:textSize="40sp"
        android:layout_marginTop="65dp"
        android:textColor="#264653"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/skinp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>